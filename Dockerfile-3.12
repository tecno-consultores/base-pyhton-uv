FROM python:3.12-slim-bookworm
LABEL maintainer="sinfallas@gmail.com, ecrespo@gmail.com"
LABEL build_date="2024-12-19"
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy
ENV UV_PYTHON_DOWNLOADS=never
ENV UV_PYTHON=python3.12
RUN apt-get update -qq && apt-get -y dist-upgrade && apt-get -y install --no-install-recommends --no-install-suggests build-essential gettext ca-certificates curl git zip unzip wget nano && apt clean && apt -y autoremove && rm -rf /var/lib/{apt,dpkg,cache,log}
ADD https://astral.sh/uv/install.sh /install.sh
RUN chmod -R 655 /install.sh && /install.sh && rm /install.sh
